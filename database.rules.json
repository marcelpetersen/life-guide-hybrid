    "activities": {
      ".read": true,
      ".write": false
    },
      "activity-plans": {
      	".read": true,
        "$userId": {
          ".read": true,
          ".write": "$userId === auth.uid"
        }
    },
      "food": {
      	".read": true,
      	".write": false
    },
      "macronutrients": {
        ".read": true,
        ".write": false
    },
      "meal-plans": {
      	".read": true,
        "$userId": {
          ".read": true,
          ".write": "$userId === auth.uid"
        }
    },
      "micronutrients": {
        ".read": true,
        ".write": false
    },
      "recipes": {
      	".read": true,
        "$userId": {
          ".read": true,
          ".write": "$userId === auth.uid"
        }
    }
  }
}